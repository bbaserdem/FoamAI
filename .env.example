# FoamAI Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# OpenFOAM Configuration
OPENFOAM_PATH=/path/to/your/openfoam/installation
OPENFOAM_VERSION=2312

# ParaView Configuration
PARAVIEW_PATH=/path/to/your/paraview/installation

# Application Configuration
LOG_LEVEL=INFO
MAX_SIMULATION_TIME=3600  # seconds
WORK_DIR=./work
RESULTS_DIR=./results

# Development Configuration
DEBUG=false
VERBOSE=false 
